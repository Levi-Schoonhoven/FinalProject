@model State

@{
    ViewBag.Title = "Filter State";
}


<form>
<div>
   
            <div class="form-group">
                <label asp-for="DirectionId">Direction</label>
                <select asp-for="DirectionId" class="form-control">
                    <option value="">Select a Direction</option>
                    @foreach (Direction x in ViewBag.Directions)
                    {
                        <option value="@x.DirectionId">@x.Name</option>
                    }
                </select>
          



            </div>
          
   
</div>
</form>